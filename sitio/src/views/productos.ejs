<!DOCTYPE html>
<html lang="es">

<%- include("./partials/head.ejs") %> 

<body class="bodi">
    <!--Barra de menú-->
    <%- include("./partials/header.ejs") %> 

    <!--Barra del buscador + ingresar/iniciar sesión-->
    <%- include("./partials/nav.ejs") %> 


    <div class="cuerpo">
        <!--Carrusel-->
     
        <section class="seccion">
            <div class="container is-fluid">
                <div class="columns is-multiline">
                    <% productos.forEach(producto => { %>

                    <article class="column is-4 border">
                        <!--Articulos-->
                        <a href="/productos/detalle/<%= producto.id_producto %>"><img src="/images/<%= producto.imagen %> " alt=""></a>
                        <h2><%= producto.nombre %></h2>
                        <p><%= producto.descripcion %></p>
                        <button class="vermas"><a href="/productos/detalle/<%= producto.id_producto %> ">ver más</a></button>
                        <button class="agregarcar"><a href="/carrito/carrito">Agregar al Carrito</a></button>
                    </article>
                    <% }) %>
                </div>
            </div>
        </section>
    </div>
    <%- include('partials/footer') %> 


    
</body>

</html>