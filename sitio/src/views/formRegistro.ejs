<!DOCTYPE html>
<html lang="es">

<%- include('partials/head') %> 

    <body class="bodi">
        <!--Barra de menú-->
    
        <%- include('partials/header') %> 
    
        <!--Barra del buscador + ingresar/iniciar sesión-->
        <%- include('partials/nav') %> 


<div class="ingreso ">

    <img src="/images/logo.png" alt="logo" class="logo">

    <h2>Registro de Usuario</h2>
    <div class="">
        <form method="POST" id = 'formRegister' action="/usuarios/registro">
            <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <input type="text" class="form-control" id="inputNombre" name ="nombre">
                <small id = "errorNombre" class="text-warning"><%= (typeof errors != 'undefined' && errors.nombre)?errors.nombre.msg: "" %> </small>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Apellido</label>
                <input type="text" class="form-control" id="inputApellido" name ="apellido">
                <small id = "errorApellido" class="text-warning"><%= (typeof errors != 'undefined' && errors.apellido)?errors.apellido.msg: "" %> </small>
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Email</label>
              <input type="email" class="form-control" id="inputEmail" name ="email">
              <small id = "errorEmail" class="text-warning"><%= (typeof errors != 'undefined' && errors.email)?errors.email.msg: "" %> </small>
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Contraseña</label>
              <input type="password" class="form-control" id ="inputPass" name="pass" >
              <small id = "errorPass" class="text-warning"><%= (typeof errors != 'undefined' && errors.pass)?errors.pass.msg: "" %> </small>

            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Reingresar contraseña</label>
                <input type="password" class="form-control" id ="inputPass2" name="pass2">
              <small id= "errorPass2"class="text-warning"><%= (typeof errors != 'undefined' && errors.pass2)?errors.pass2.msg: "" %> </small>

              </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary ml-5">Registrarse</button>
            </div>
          </form>
          <small class="text-warning" id="msgError"></small>
    </div>
</div>

<%- include('partials/footer')  %> 

</body>
</html>
