<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

<body class="bodi">
  <!--Barra de menú-->

  <%- include('partials/header')  %>

  <!--Barra del buscador + ingresar/iniciar sesión-->

  <%- include('partials/nav')  %>

  <section class="cuerpo">
    <div class="">
      <div class="">
        <div class="">
          <div class="">
            <form>
              <div class="row">
                <div class="col">
                  <label for="exampleFormControlFile1">Carga de producto</label>
                </div>
                <div class="col">
                <input type="file" class="form-control-file" id="exampleFormControlFile1">
              </div>
              
            </div>
              <div class="row">
                <div class="col">
                  <input type="text" class="form-control" placeholder="Nombre del producto">
                </div>
                <div class="col">
                  <input type="text" class="form-control" placeholder="Categoria">
                </div>
              </div>
              <div class="products">
              <div class="row ">
                <div class="col">
                <label for="exampleFormControlTextarea1">Descripción</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>

              
              <div class="row product" >
                <div class="col ">
                  <label for="exampleFormControlInput1">Tipo de masa</label>

              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                <label class="form-check-label" for="exampleRadios1">
                  Común
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                <label class="form-check-label" for="exampleRadios2">
                  Integral
                </label>
              </div>
             </div>


            </div>

            <div class="row product">

              <div class="col">
                <label for="exampleFormControlInput1">Producto</label>

            <div class="form-check">
              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
              <label class="form-check-label" for="exampleRadios1">
                Disponible
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
              <label class="form-check-label" for="exampleRadios2">
                No disponible
              </label>
            </div>
           </div>


            </div>

            </div>
          </div>

        


          </div>
          <div class="form-row">
            <div class="col-7">
              <input type="text" class="form-control" placeholder="City">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="State">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Zip">
            </div>
          </div>

            

            


              <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
              </div>
              
              <div class="form-group">
                <label for="exampleFormControlSelect1">Example select</label>
                <select class="form-control" id="exampleFormControlSelect1">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
              
              
              <div class="form-group">
                <label for="exampleFormControlSelect2">Example multiple select</label>
                <select multiple class="form-control" id="exampleFormControlSelect2">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
              
            <div class="row">
                <div class="col">
                <label for="exampleFormControlTextarea1">Descripción</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
               <div class="col">
                <label for="exampleFormControlTextarea1">Cocción</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
              </div>
            </div>
              <div class="form-group row">
                <div class="col 12">
                  <button type="submit" class="btn btn-primary">Agregar producto</button>
                </div>
                <div class="col 3">
                  <button type="submit" class="btn btn-primary">Eliminar producto</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include('partials/footer')  %>
</body>

</html>